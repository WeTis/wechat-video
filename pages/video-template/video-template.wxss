@import  "/pages/details-template/details-template";
.video-introduce{
  width: 100%;
  height:300px;
  position: relative; 
}
.video-box-fixed{
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: 900;
  background-color: #f1f1f1;
}
.video-box{
  position: relative;
  width: 100%;

  overflow: hidden;
}
.video-box video{
  width: 100%;
  height: 225px;
}
 .video-head{
  position: absolute;
  top: 20rpx;
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  color: #fff;
}
.return-title{
  position: fixed;
  top: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  z-index: 30;
}
.return-title .return-title-image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.return-title .return-title-text{
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 30rpx;
  padding: 0 20rpx;
}
.video-head-author{
  flex: 1;
  display: flex;
  flex-direction: row;
}
.video-head-author .video-head-author-avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin: 0 20rpx;
}
.video-head-author .video-head-author-name{
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;

}
.video-label{
  font-size: 22rpx;
  padding: 0 15rpx;
  margin-right: 20rpx;
  height: 36rpx;
  line-height: 36rpx;
  border: 1rpx solid #fff;
  border-radius: 18rpx;
}
.video-curtain{
  position: absolute;
  top: 0;
  height: 225px;
  width: 100%;
  z-index: 20;
  box-shadow:0 0 1px 1px rgba(0,0,0,0.2);

}
.video-play-icon{
  display: block;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
  left: 50%;
  margin-left: -30rpx;
  z-index: 20;
}
.netstat-box{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 22;
}
.netstat-box .netstat-play-btn{
  position: absolute;
  height: 60rpx;
  width: 200rpx;
  text-align: center;
  line-height: 60rpx;
  top: 50%;
  left: 50%;
  margin-left: -100rpx;
  margin-top: -30rpx;
  border:1px solid red;
  border-radius: 30rpx;
  color: red;
  font-size: 24rpx;

}
.video-curtain .video-img{
  width: 100%;
  height: 100%;
}

.video-baseinfo{
  position: absolute;
  left: 0;
  bottom: 8px;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
}
.video-baseinfo .video-title{
  flex: 1;
  height: 50px;
  padding-left: 20rpx;
  font-size: 30rpx;
}
.video-like-comment{
  width: 200rpx;
  display: flex;
  flex-direction: row;
  margin-right: 20rpx;

}
.video-like-comment view{
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.video-like-comment image{
  display: block;
  margin:0 auto;
  width: 40rpx;
  height: 40rpx;
}
.video-like-comment text{
  font-size: 20rpx;
  color: #666;
  margin-top: 6rpx;
}
.hide{
  display: none;
}
.show{
  overflow:auto;
  position:fixed;
  width: 100%;
  top:225px;
  bottom:0;
  z-index: 991;
  background-color:#ccc;
}